{
	"name": "remark",
	"displayName": "显示在应用市场的名字",
	"description": "'具体描述'",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "addRemark",
				"title": "♐1.设置备注"
			},
			{
				"command": "delRemark",
				"title": "♐2.清除备注"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "delRemark",
					"group": "navigation"
				},
				{
					"command": "addRemark",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"eslint": "^8.54.0",
		"typescript": "^5.3.2",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8"
	}
}
