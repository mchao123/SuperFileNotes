{
	"name": "remark",
	"displayName": "Super File Notes",
	"description": "'文件备注工具'",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"author": "小羊",
	"publisher": "小羊",
	"keywords": [
		"file",
		"folder",
		"remark",
		"note",
		"notes",
		"文件夹",
		"文件",
		"备注"
	],
	"icon": "static/img/icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "addRemark",
				"title": "♐1.设置备注"
			},
			{
				"command": "delRemark",
				"title": "♐2.清除备注"
			},
			{
				"command": "viewRemark",
				"title": "♐3.查看所有备注"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "addRemark",
					"group": "navigation"
				},
				{
					"command": "delRemark",
					"group": "navigation"
				},
				{
					"command": "viewRemark",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "addRemark",
				"key": "ctrl+m",
				"mac": "cmd+m",
				"when": "editorFocus"
			},
			{
				"command": "addRemark",
				"key": "ctrl+m",
				"mac": "cmd+m",
				"when": "!editorFocus"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"eslint": "^8.54.0",
		"typescript": "^5.3.2",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8"
	}
}
